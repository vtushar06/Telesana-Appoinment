// Prisma ORM configuration for PostgreSQL database
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Connection string from .env
}

// Main User model - handles patients, doctors, and admin roles
model User {
  id                  String              @id @default(uuid()) // UUID for unique identification
  email               String              @unique
  name                String?
  imageUrl            String?
  role                UserRole            @default(UNASSIGNED) // Role-based access control
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  credits             Int                 @default(2) // Free credits for new users
  // Doctor-specific fields
  specialty           String?
  experience          Int?
  credentialUrl       String?
  description         String?             @db.Text
  verificationStatus  VerificationStatus? @default(PENDING)
  // Relations - One user can have multiple records
  doctorAppointments  Appointment[]       @relation("DoctorAppointments")
  patientAppointments Appointment[]       @relation("PatientAppointments")
  availabilities      Availability[]
  transactions        CreditTransaction[]
  payouts             Payout[]
}

// Doctor availability slots for booking
model Availability {
  id        String     @id @default(uuid())
  doctorId  String
  startTime DateTime
  endTime   DateTime
  status    SlotStatus @default(AVAILABLE)
  doctor    User       @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, startTime]) // Optimized queries for fetching doctor slots
}

// Appointment booking system
model Appointment {
  id                 String            @id @default(uuid())
  patientId          String
  doctorId           String
  startTime          DateTime
  endTime            DateTime
  status             AppointmentStatus @default(SCHEDULED)
  notes              String?           @db.Text
  patientDescription String?           @db.Text
  videoSessionId     String?           // For video call integration
  videoSessionToken  String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  doctor             User              @relation("DoctorAppointments", fields: [doctorId], references: [id])
  patient            User              @relation("PatientAppointments", fields: [patientId], references: [id])

  @@index([status, startTime]) // Fast queries by status and time
  @@index([doctorId, startTime])
  @@index([patientId])
}

// Credit system for appointment bookings
model CreditTransaction {
  id        String          @id @default(uuid())
  userId    String
  amount    Int             // Credits added/deducted
  type      TransactionType // Purchase or deduction
  packageId String?
  createdAt DateTime        @default(now())
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Doctor payout management
model Payout {
  id          String       @id @default(uuid())
  doctorId    String
  amount      Float        // Total amount
  credits     Int          // Credits being converted
  platformFee Float        // Platform commission
  netAmount   Float        // Amount after fee
  paypalEmail String       // Payment destination
  status      PayoutStatus @default(PROCESSING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  processedAt DateTime?    // When admin processed it
  processedBy String?      // Admin who processed
  doctor      User         @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([status, createdAt])
  @@index([doctorId, status])
}

enum UserRole {
  UNASSIGNED
  PATIENT
  DOCTOR
  ADMIN
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum SlotStatus {
  AVAILABLE
  BOOKED
  BLOCKED
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum TransactionType {
  CREDIT_PURCHASE
  APPOINTMENT_DEDUCTION
  ADMIN_ADJUSTMENT
}

enum PayoutStatus {
  PROCESSING
  PROCESSED
}
